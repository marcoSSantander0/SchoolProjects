@model WebApp.Models.Alumno

@{
    ViewData["Title"] = "Eliminar Alumno";
}

<h2 class="text-2xl font-bold text-red-600 mb-4">Â¿Eliminar Alumno?</h2>

<div class="bg-white p-4 rounded shadow-md mb-6">
    <p><strong>Nombre:</strong> @Model.Nombre</p>
    <p><strong>Correo:</strong> @Model.Correo</p>
